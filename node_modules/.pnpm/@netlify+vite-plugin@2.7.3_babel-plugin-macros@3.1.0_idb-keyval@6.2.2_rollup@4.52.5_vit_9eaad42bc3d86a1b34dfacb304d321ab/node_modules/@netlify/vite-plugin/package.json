{
  "name": "@netlify/vite-plugin",
  "version": "2.7.3",
  "description": "Vite plugin with a local emulation of the Netlify environment",
  "type": "module",
  "engines": {
    "node": "^20.6.1 || >=22"
  },
  "main": "./dist/main.js",
  "exports": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup-node",
    "prepack": "npm run build",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:ci": "vitest run",
    "dev": "tsup-node --watch",
    "publint": "npx -y publint --strict"
  },
  "keywords": [
    "netlify",
    "vite-plugin",
    "dev"
  ],
  "license": "MIT",
  "repository": "netlify/primitives",
  "bugs": {
    "url": "https://github.com/netlify/primitives/issues"
  },
  "author": "Netlify Inc.",
  "devDependencies": {
    "@types/node": "^20.17.57",
    "playwright": "^1.52.0",
    "tsup": "^8.0.0",
    "vite": "^6.3.6",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@netlify/dev": "4.6.2",
    "@netlify/dev-utils": "^4.3.0",
    "dedent": "^1.7.0"
  },
  "peerDependencies": {
    "vite": "^5 || ^6 || ^7"
  }
