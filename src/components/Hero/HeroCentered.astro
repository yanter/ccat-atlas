---
/**
 * * Hero centered with video button
 *
 * There is a commented out "awards" section below in case you want that
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";
import VideoButton from "@components/Button/VideoButton.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

// images
import person1 from "@images/ashton_blackwell.jpg";
import person2 from "@images/nicola_harris.jpg";
import person3 from "@images/nic_fassbender.jpg";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<section
  id="hero-center"
  class="mt-20 overflow-x-clip bg-[url('/assets/pattern-light-big.svg')] bg-center bg-no-repeat dark:bg-[url('/assets/pattern-dark-big.svg')]"
>
  <div class="site-container mx-auto px-4 pt-10 pb-20">
    <!-- alter the max-w-[750px] here until your text looks nice on large screens -->
    <div class="mx-auto mb-16 flex w-full max-w-[750px] flex-col justify-center px-4 text-center">
      <div data-mos="fade-right" data-mos-anchor="#hero-center">
        <span
          class="bg-primary-500 mb-4 inline-flex items-center rounded-full px-2 py-px text-xs leading-5 text-white uppercase"
        >
          Meet Atlas
        </span>

        <h1
          class="text-base-900 dark:text-base-100 mb-6 text-3xl leading-tight font-bold tracking-tight text-pretty lg:text-5xl lg:leading-tight"
        >
          {t("hero_text")}
        </h1>
      </div>
      <p
        class="description mb-10 text-lg text-pretty lg:text-xl"
        data-mos="fade-right"
        data-mos-delay=".1"
        data-mos-anchor="#hero-center"
      >
        {t("hero_description")}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <Button
          variant="primary"
          href="https://cosmicthemes.com/themes/atlas/"
          target="_blank"
          rel="noopener noreferrer"
          data-mos="fade-right"
          data-mos-delay=".2"
          data-mos-anchor="#hero-center"
        >
          Get Atlas
        </Button>
        <VideoButton data-mos="fade-right" data-mos-delay=".2" data-mos-anchor="#hero-center" />
      </div>

      <!-- social proof -->
      <div
        class="mx-auto mt-8 flex max-w-md justify-center"
        data-mos="fade-right"
        data-mos-delay=".3"
        data-mos-anchor="#hero-center"
      >
        <div class="-m-1.5 flex flex-wrap items-center">
          <div class="w-auto p-1.5">
            <div class="flex flex-wrap">
              <div
                class="border-primary-500 bg-primary-500 aspect-square size-10 overflow-hidden rounded-full border-2"
              >
                <Image
                  src={person1}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
              <div
                class="border-primary-500 bg-primary-500 -ml-5 aspect-square size-10 overflow-hidden rounded-full border-2"
              >
                <Image
                  src={person2}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
              <div
                class="border-primary-500 bg-primary-500 -ml-5 aspect-square size-10 overflow-hidden rounded-full border-2"
              >
                <Image
                  src={person3}
                  class="object-cover"
                  alt="reader"
                  loading="eager"
                  width={100}
                />
              </div>
            </div>
          </div>
          <div class="flex-1 p-1.5 text-left">
            <p class="description max-w-[14rem] text-sm leading-tight tracking-tight">
              Join 200+ happy and<br />
              satisfied customers.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
