---
import PostCard from "@components/PostCard/PostCard.astro";
import { type CollectionEntry, getCollection } from "astro:content";

interface Props {
  posts: CollectionEntry<"blog">[];
  class?: string;
}

const { posts, class: className } = Astro.props as Props;
---

<div class={`mx-auto grid max-w-7xl gap-8 md:grid-cols-2 lg:grid-cols-3 ${className}`}>
  {posts.map((post, idx) => <PostCard post={post} />)}
</div>
